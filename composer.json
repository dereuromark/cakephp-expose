{
	"name": "dereuromark/cakephp-expose",
	"description": "CakePHP Expose Plugin to expose entities through UUIDs instead of AIIDs",
	"type": "cakephp-plugin",
	"keywords": ["cakephp", "expose", "uuid", "obfuscate"],
	"homepage": "https://github.com/dereuromark/cakephp-expose/",
	"license": "MIT",
	"authors": [
		{
			"name": "Mark Scherer",
			"homepage": "https://www.dereuromark.de",
			"role": "Maintainer"
		},
		{
			"name": "Other contributors",
			"homepage": "https://github.com/dereuromark/cakephp-expose/graphs/contributors",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/dereuromark/cakephp-expose/issues",
		"source": "https://github.com/dereuromark/cakephp-expose/"
	},
	"require": {
		"php": ">=7.2",
		"cakephp/cakephp": "^4.0"
	},
	"require-dev": {
		"ext-bcmath": "*",
		"brick/math": "^0.8.14",
		"keiko/uuid-shortener": "^0.2.1",
		"fig-r/psr2r-sniffer": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Expose\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Expose\\Test\\": "tests/",
			"TestApp\\": "tests/test_app/src/"
		}
	},
	"scripts": {
		"test": "php phpunit.phar",
		"test-setup": "[ ! -f phpunit.phar ] && wget https://phar.phpunit.de/phpunit-8.5.1.phar && mv phpunit-8.5.1.phar phpunit.phar || true",
		"test-coverage": "php phpunit.phar --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
		"stan": "phpstan analyse -c tests/phpstan.neon -l 5 src/",
		"stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 && mv composer.backup composer.json",
		"cs-check": "phpcs -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php --ignore=/config/Migrations/ src/ tests/",
		"cs-fix": "phpcbf -v --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php --ignore=/config/Migrations/ src/ tests/"
	}
}
