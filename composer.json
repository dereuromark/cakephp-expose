{
	"name": "dereuromark/cakephp-expose",
	"description": "CakePHP Expose Plugin to expose entities through UUIDs instead of AIIDs",
	"type": "cakephp-plugin",
	"keywords": [
		"cakephp",
		"expose",
		"uuid",
		"obfuscate"
	],
	"homepage": "https://github.com/dereuromark/cakephp-expose/",
	"license": "MIT",
	"authors": [
		{
			"name": "Mark Scherer",
			"homepage": "https://www.dereuromark.de",
			"role": "Maintainer"
		},
		{
			"name": "Other contributors",
			"homepage": "https://github.com/dereuromark/cakephp-expose/graphs/contributors",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/dereuromark/cakephp-expose/issues",
		"source": "https://github.com/dereuromark/cakephp-expose/"
	},
	"require": {
		"php": ">=7.3",
		"cakephp/cakephp": "^4.2.0"
	},
	"require-dev": {
		"ext-bcmath": "*",
		"phpunit/phpunit": "^9.5",
		"brick/math": "^0.9.1",
		"keiko/uuid-shortener": "^0.5.0",
		"fig-r/psr2r-sniffer": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Expose\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Expose\\Test\\": "tests/",
			"TestApp\\": "tests/test_app/src/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"test-coverage": "phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
		"stan": "phpstan analyse",
		"stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^1.0.0 && mv composer.backup composer.json",
		"cs-check": "phpcs -p --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php --ignore=/config/Migrations/ src/ tests/",
		"cs-fix": "phpcbf -v --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --extensions=php --ignore=/config/Migrations/ src/ tests/"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
